<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <EditTextPreference android:title="@string/username" android:key="username" android:defaultValue="student" android:summary="Please enter your username"/>
    <EditTextPreference android:title="@string/password" android:key="password" android:password="true" android:defaultValue="password" android:summary="Please enter your password"/>
    <EditTextPreference android:title="@string/server" android:key="server" android:defaultValue="http://yamba.marakana.com/api" android:summary="Please enter the server root url"/>
    <ListPreference android:key="delay" android:summary="Please select the time duration for update (default is 30 seconds)" android:title="@string/delay" android:entries="@array/delay_names" android:entryValues="@array/delay_values"/>
    

</PreferenceScreen>
